@{
    ViewData["Title"] = "contact";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}

<main class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <!--Section-->
    <section class="container section-shadow section-white section-border section-padding-bottom section-margin-bottom section-margin-top">
        <div class="col-xs-12">
            <!-- Title -->
            <div class="section-title">
                <h1>
                    تماس با ما
                </h1>
            </div>
            <!-- End Title -->
            <div class="section-content contact-section">
                <div class="col-xs-12">
                    <form action="" method="post" autocomplete="off" class="contact-form" novalidate>
                        <div class="col-xs-12">
                            <div class="col-sm-6 col-xs-12">
                                <select class="subject-contact-form hs-input col-xs-12">
                                    <option></option>
                                    <option value="1">ریدن به .Net</option>
                                    <option value="2">ریدن به Adobe XD</option>
                                </select>
                            </div>
                            <div class="col-sm-6 col-xs-12">
                                <input type="text" class="hs-input col-xs-12" placeholder="نام و نام خانوادگی">
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="col-sm-6 col-xs-12">
                                <input type="text" class="hs-input col-xs-12" placeholder="شماره موبایل">
                            </div>
                            <div class="col-sm-6 col-xs-12">
                                <input type="text" class="hs-input col-xs-12" placeholder="ایمیل">
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="col-xs-12">
                                <textarea class="hs-input col-xs-12" rows="10" placeholder="متن پیام"></textarea>
                            </div>
                        </div>
                        <div class="col-xs-12 text-left">
                            <div class="col-xs-12">
                                <button class="btn custom-btn-primary">
                                    ارسال
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!--End Section-->
</main>